{
  "name": "hostbuddy2",
  "version": "0.1.0",
  "description": "Run-time environment for AI one-shot apps and HTML files. Create, manage, and run projects locally on macOS and Windows.",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test": "jest",
    "dist": "electron-builder -mwl",
    "dist:mac": "electron-builder --mac --x64 --arm64",
    "dist:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "desktop",
    "runtime",
    "html",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "pnpm": "^9.4.0"
  },
  "dependencies": {
    "esbuild": "^0.21.5",
    "@twind/core": "^1.1.3",
    "@twind/preset-tailwind": "^1.1.4"
  },
  "build": {
    "appId": "com.hostbuddy.app",
    "productName": "HostBuddy",
    "files": [
      "src/**",
      "assets/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/esbuild/**",
      "**/node_modules/@esbuild/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/pnpm/dist",
        "to": "pnpm",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}

