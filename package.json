{
  "name": "hostbuddy2",
  "version": "1.2.0",
  "description": "Run-time environment for AI one-shot apps and HTML files. Create, manage, and run projects locally on macOS and Windows.",
  "main": "src/main/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "test": "jest",
    "dist": "electron-builder -mwl",
    "dist:mac": "electron-builder --mac --x64 --arm64",
    "dist:mac:arm64": "npm ci && electron-builder --mac --arm64",
    "dist:mac:x64": "arch -x86_64 npm ci && arch -x86_64 electron-builder --mac --x64",
    "dist:mac:both": "npm run dist:mac:arm64 && npm run dist:mac:x64",
    "dist:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "desktop",
    "runtime",
    "html",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "esbuild": "^0.21.5",
    "@twind/core": "^1.1.3",
    "@twind/preset-tailwind": "^1.1.4",
    "pnpm": "^9.4.0"
  },
  "build": {
    "appId": "com.hostbuddy.app",
    "productName": "HostBuddy",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "files": [
      "src/**",
      "assets/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/esbuild/**",
      "**/node_modules/@esbuild/**",
      "**/node_modules/esbuild-*/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/pnpm/dist",
        "to": "pnpm",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "identity": null,
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build/icon.icns",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 180
        },
        {
          "x": 400,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "publisherName": "HostBuddy",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HostBuddy",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "license": null,
      "differentialPackage": true
    }
  }
}

